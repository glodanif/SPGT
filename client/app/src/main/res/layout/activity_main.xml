<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    android:keepScreenOn="true"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ib_clean"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_delete_sweep" />

        <View
            android:id="@+id/v_wheel"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_below="@+id/ib_clean"
            android:layout_margin="16dp"
            android:background="@drawable/pad_background"
            android:padding="@dimen/pan_radius_padding" />

        <ImageButton
            android:id="@+id/ib_remote_settings"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_settings_remote" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_spen_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/pad_background"
        android:padding="@dimen/pan_radius_padding" />
</LinearLayout>
